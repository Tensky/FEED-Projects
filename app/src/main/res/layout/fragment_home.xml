<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_logo" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imageLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_gradient_green_roundedtop_48dp"
        android:id="@+id/home_backgroundView"/>


    <TextView
        android:id="@+id/home_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto_black"
        android:text="Kamu mau berbagi apa hari ini?"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_backgroundView" />

    <ImageButton
        android:id="@+id/home_carimakanButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_white_rounded_15dp"
        android:paddingStart="32dp"
        android:paddingTop="16dp"
        android:paddingEnd="32dp"
        android:paddingBottom="48dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_carimakanan"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/home_bagimakanButton"
        app:layout_constraintTop_toBottomOf="@+id/home_desc" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:clickable="false"
        android:elevation="6dp"
        android:focusable="false"
        android:text="Cari Makanan"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/home_carimakanButton"
        app:layout_constraintEnd_toEndOf="@id/home_carimakanButton"
        app:layout_constraintStart_toStartOf="@id/home_carimakanButton" />

    <ImageButton
        android:id="@+id/home_bagimakanButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_white_rounded_15dp"
        android:paddingStart="32dp"
        android:paddingTop="16dp"
        android:paddingEnd="32dp"
        android:paddingBottom="48dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_bagikanmakanan"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toStartOf="@+id/home_carimakanButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_desc" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:clickable="false"
        android:elevation="6dp"
        android:focusable="false"
        android:text="Bagikan Makanan"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/home_bagimakanButton"
        app:layout_constraintEnd_toEndOf="@id/home_bagimakanButton"
        app:layout_constraintStart_toStartOf="@id/home_bagimakanButton" />

    <ImageButton
        android:id="@+id/home_beribantuanButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_white_rounded_15dp"
        android:paddingStart="32dp"
        android:paddingTop="16dp"
        android:paddingEnd="32dp"
        android:paddingBottom="48dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_beribantuan"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/home_caribantuanButton"
        app:layout_constraintTop_toBottomOf="@+id/home_desc2" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:clickable="false"
        android:elevation="6dp"
        android:focusable="false"
        android:text="Berikan Bantuan"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/home_beribantuanButton"
        app:layout_constraintEnd_toEndOf="@id/home_beribantuanButton"
        app:layout_constraintStart_toStartOf="@id/home_beribantuanButton" />

    <TextView
        android:id="@+id/home_desc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto_black"
        android:text="Kamu mau bantu siapa hari ini?"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_carimakanButton" />

    <ImageButton
        android:id="@+id/home_caribantuanButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_white_rounded_15dp"
        android:paddingStart="32dp"
        android:paddingTop="16dp"
        android:paddingEnd="32dp"
        android:paddingBottom="48dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_caribantuan"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toStartOf="@id/home_beribantuanButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_desc2" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:clickable="false"
        android:elevation="6dp"
        android:focusable="false"
        android:text="Carikan Bantuan"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/home_caribantuanButton"
        app:layout_constraintEnd_toEndOf="@id/home_caribantuanButton"
        app:layout_constraintStart_toStartOf="@id/home_caribantuanButton" />

</androidx.constraintlayout.widget.ConstraintLayout>